<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:theme="@style/ToolbarTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ececec" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">

        <TextView
            style="@style/ItemProfileText"
            android:text="修改手机号码" />

        <ImageView
            style="@style/ItemProfileBtn"
            android:src="@drawable/btn_y" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c9c9c9" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">

        <TextView
            style="@style/ItemProfileText"
            android:text="修改邮箱" />

        <ImageView
            style="@style/ItemProfileBtn"
            android:src="@drawable/btn_y" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c9c9c9" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">

        <TextView
            style="@style/ItemProfileText"
            android:text="修改密码" />

        <ImageView
            style="@style/ItemProfileBtn"
            android:src="@drawable/btn_y" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c9c9c9" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">

        <TextView
            style="@style/ItemProfileText"
            android:text="社交账号绑定" />

        <ImageView
            style="@style/ItemProfileBtn"
            android:src="@drawable/btn_y" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ececec" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">

        <TextView
            style="@style/ItemProfileText"
            android:text="开启勿扰" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/wurao"
            style="@style/Custom.Widget.SwitchCompat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:theme="@style/Custom.Widget.SwitchCompat"
            app:theme="@style/Custom.Widget.SwitchCompat" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c9c9c9" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">

        <TextView
            style="@style/ItemProfileText"
            android:text="开启推送" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/tuisong"
            style="@style/Custom.Widget.SwitchCompat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:theme="@style/Custom.Widget.SwitchCompat"
            app:theme="@style/Custom.Widget.SwitchCompat" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ececec" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">

        <TextView
            style="@style/ItemProfileText"
            android:text="清空缓存" />

        <ImageView
            style="@style/ItemProfileBtn"
            android:src="@drawable/btn_y" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c9c9c9" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">

        <TextView
            style="@style/ItemProfileText"
            android:text="关于App" />

        <ImageView
            style="@style/ItemProfileBtn"
            android:src="@drawable/btn_y" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ececec" />

    <TextView
        android:id="@+id/profile_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="登录"
        android:textColor="#000000" />
</LinearLayout>
