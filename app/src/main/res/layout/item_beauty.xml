<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e5e5e5"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:layout_marginTop="19dp"
        android:background="#f2f2f2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@drawable/biao"
                android:gravity="right"
                android:paddingRight="5dp"
                android:text="14\n/2016"
                android:textColor="#ffffff"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tv_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="8dp"
                android:text="VOL 1194 回家"
                android:textColor="#010101"
                android:textSize="16sp" />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="47dp"
            android:layout_marginRight="47dp"
            android:background="@color/c9_light_gray"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <com.tekinarslan.material.sample.weight.HWRatioImageView
                android:id="@+id/riv_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/item_default"
                app:hwRadio="0.75" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="13dp"
            android:gravity="right"
            android:text="回家"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginRight="40dp"
            android:gravity="right"
            android:text="悟空 作品"
            android:textColor="#000000"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="245dp"
            android:layout_height="58dp"
            android:layout_gravity="center_horizontal"
            android:background="#eeeeee"
            android:orientation="horizontal">

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#999999" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="一个人没有什么不好，不过是空出来的一座，邀请了寂寞。by周宏翔"
                android:textColor="#000000" />
        </LinearLayout>

        <View
            android:layout_width="245dp"
            android:layout_height="2dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="11dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/dotted_line" />

        <TextView
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="14dp"
            android:text="Permalink 1条评论"
            android:textColor="#ea3949"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
