<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="259dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <com.tekinarslan.material.sample.weight.HWRatioImageView
            android:id="@+id/hw_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/default_photo_wight"
            android:scaleType="centerCrop"
            app:hwRadio="0.43" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="37dp"
            android:text="Akakiの物語屋"
            android:textColor="#54585c"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_episodesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13节目"
                android:textColor="#99999c"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_subscribesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="1823订阅"
                android:textColor="#99999c"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <com.tekinarslan.material.sample.weight.CircleImageView
            android:id="@+id/civ_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="130dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_face_70px"
            android:visibility="visible" />
    </RelativeLayout>
</FrameLayout>
