<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="159dp"
    android:layout_height="248dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@color/light"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="159dp"
        android:layout_height="159dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/item_default"
            app:riv_border_color="#333333"
            app:riv_corner_radius="8dip"
            app:riv_mutate_background="true"
            app:riv_tile_mode="repeat" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="bottom"
            android:background="@drawable/image_bottom_gradinet"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_viewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/music"
                android:drawablePadding="8dp"
                android:text="13658"
                android:textColor="#fffff6"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginRight="7dp"
                android:src="@drawable/btn_shareplay" />
        </RelativeLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:lines="2"
        android:maxLines="2"
        android:text="【第一期】娱乐圈子PK,邀你上榜"
        android:textColor="#595d64"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:text="【官方】天天向上"
        android:textColor="#51c61d"
        android:textSize="10sp" />
</LinearLayout>
